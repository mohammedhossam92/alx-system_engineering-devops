server {
  listen 80;

  server_name 100.25.103.188;

  location / {
    # Proxy all requests to the application server on port 5000
    proxy_pass http://100.25.103.188:5000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
  }

  # Access log for debugging purposes
  access_log /var/log/nginx/app_server-access.log;
}
